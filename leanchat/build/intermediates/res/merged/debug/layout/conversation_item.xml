<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/common_list_item_height"
    android:layout_margin="5dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_recent_avatar"
            style="@style/My.ImageView.Photo_Avatar"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:src="@drawable/chat_default_user_avatar" />

        <TextView
            android:id="@+id/recent_unread"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_above="@+id/iv_recent_avatar"
            android:layout_marginBottom="-18dp"
            android:layout_marginLeft="-10dp"
            android:layout_toRightOf="@+id/iv_recent_avatar"
            android:background="@drawable/common_msg_tips"
            android:gravity="center"
            android:textColor="#ffffffff"
            android:textSize="10.0dip" />

        <TextView
            android:id="@+id/recent_time_text"
            style="@style/My.TextView._Black"
            android:layout_width="wrap_content"
            android:layout_height="25.0dip"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="58.0dip"
            android:layout_toRightOf="@id/iv_recent_avatar"
            android:ellipsize="end"
            android:gravity="left|center"
            android:singleLine="true"
            android:textColor="@drawable/recent_name_text_color_selector" />

        <TextView
            android:id="@+id/recent_msg_text"
            android:layout_width="fill_parent"
            android:layout_height="35.0dip"
            android:layout_below="@id/recent_time_text"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="35.0dip"
            android:layout_toRightOf="@id/iv_recent_avatar"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:paddingLeft="6.0dip"
            android:paddingRight="6.0dip"
            android:singleLine="true"
            android:textColor="@drawable/recent_message_text_color_selector"
            android:textSize="15.0sp" />

        <TextView
            android:id="@+id/recent_teim_text"
            android:layout_width="wrap_content"
            android:layout_height="25.0dip"
            android:layout_above="@id/recent_msg_text"
            android:layout_alignParentRight="true"
            android:layout_alignWithParentIfMissing="true"
            android:layout_marginRight="10dip"
            android:ellipsize="end"
            android:gravity="center"
            android:padding="0.0dip"
            android:singleLine="true"
            android:textColor="@drawable/recent_message_text_color_selector"
            android:textSize="10.0sp" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_line_width_1"
        android:layout_alignParentBottom="true"
        android:background="@drawable/base_horizontal_line"></View>

