<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.avoscloud.chat"
    android:versionCode="19"
    android:versionName="1.0.3" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="22" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.READ_LOGS" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="com.android.alarm.permission.SET_ALARM" />

    <!-- baidumap 所需的权限 -start -->
    <uses-permission android:name="com.android.launcher.permission.READ_SETTINGS" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.BROADCAST_STICKY" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />

    <!-- location -->
    <!-- 这个权限用于进行网络定位 -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <!-- 这个权限用于访问GPS定位 -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <!-- SD卡读取权限，用户写入离线定位数据 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <!-- baidumap 所需的权限 -end -->
    <application
        android:name="com.avoscloud.chat.App"
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.Light.NoActionBar" >
        <activity
            android:name="com.avoscloud.chat.activity.ChatRoomActivity"
            android:label=""
            android:launchMode="singleTask"
            android:theme="@style/ChatMainTheme" />

        <receiver android:name="com.avoscloud.chat.service.LeanchatReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.USER_PRESENT" />
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
                <action android:name="com.avoscloud.chat.INVITATION_ACTION" />
            </intent-filter>
        </receiver>

        <service android:name="com.avos.avoscloud.PushService" />

        <receiver android:name="com.avos.avoscloud.AVBroadcastReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.USER_PRESENT" />
            </intent-filter>
        </receiver>
        <receiver android:name="com.avoscloud.chat.service.NotificationBroadcastReceiver" >
            <intent-filter>
                <action android:name="com.avoscloud.chat.intent.client_notification" />
            </intent-filter>
        </receiver>

        <activity
            android:name="com.avoscloud.chat.activity.MainActivity"
            android:launchMode="singleTask" >
            <intent-filter>
                <action android:name="com.avos.leanchart.MAIN_ACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.avoscloud.chat.activity.UpdateContentActivity"
            android:theme="@style/ChatMainTheme" />
        <activity
            android:name="com.avoscloud.chat.activity.EntrySplashActivity"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.avoscloud.chat.activity.ImageBrowserActivity" />
        <activity
            android:name="com.avoscloud.chat.activity.LocationActivity"
            android:theme="@style/ChatMainTheme" />
        <activity android:name="com.avoscloud.chat.activity.EntryLoginActivity" />
        <activity
            android:name="com.avoscloud.chat.activity.EntryRegisterActivity"
            android:theme="@style/ChatMainTheme" />
        <activity
            android:name="com.avoscloud.chat.activity.ContactNewFriendActivity"
            android:theme="@style/ChatMainTheme" />
        <activity
            android:name="com.avoscloud.chat.activity.ContactAddFriendActivity"
            android:theme="@style/ChatMainTheme" />
        <activity
            android:name="com.avoscloud.chat.activity.ContactPersonInfoActivity"
            android:theme="@style/ChatMainTheme" />
        <activity
            android:name="com.avoscloud.chat.activity.ProfileNotifySettingActivity"
            android:theme="@style/ChatMainTheme" />
        <activity
            android:name="com.avoscloud.chat.activity.ConversationGroupListActivity"
            android:label="@string/conversation_group"
            android:theme="@style/ChatMainTheme" />
        <activity
            android:name="com.avoscloud.chat.activity.ConversationDetailActivity"
            android:theme="@style/ChatMainTheme" />
        <activity
            android:name="com.avoscloud.chat.activity.ConversationAddMembersActivity"
            android:label="@string/conversation_inviteMembers"
            android:theme="@style/ChatMainTheme" />
        <activity
            android:name="com.avoscloud.chat.activity.PersonViewActivity"
            android:label="@string/profile_person"
            android:theme="@style/ChatMainTheme" />
        <activity android:name="com.avoscloud.chat.activity.ImagePagerActivity" />

        <service
            android:name="com.baidu.location.f"
            android:enabled="true"
            android:process=":remote" />

